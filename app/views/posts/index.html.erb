<br>
<%= link_to "Login", '/login', method: :get %>
<%= link_to "Sign Up", '/users/new', method: :get %>

<% if logged_in? %>
  <%= link_to "Logout", '/logout', method: :delete %>
  <h1>You are Logged In, <%= current_user.username %></h1>

<% end %>

<h1>Posts</h1>

<%= button_to "New Post", '/posts/new', method: :get %>

<% @posts.each do |post| %>
  <p><%= post.caption %></p>
  <% if post.image.attached? %>
    <%= image_tag post.image, style: "width: 200px; display: block" %>
  <% end %>
  <a href="/posts/<%= post.id %>/like"><%= post.likes %> likes</a>
<% end %>